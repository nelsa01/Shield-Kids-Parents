<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Category Title -->
    <TextView
        android:id="@+id/tvCategoryName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set time limits for category apps"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <!-- Daily Time Limit Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Daily Time Limit"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/switchDailyLimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:theme="@style/SwitchTheme" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set maximum daily usage time"
            android:textSize="12sp"
            android:textColor="@color/gray_600"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp" />

        <!-- Time Picker -->
        <TimePicker
            android:id="@+id/timePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:timePickerMode="spinner"
            android:layout_marginBottom="8dp" />

    </LinearLayout>

    <!-- Time Window Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Allowed Time Window"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/switchTimeWindow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/SwitchTheme" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Restrict usage to specific hours"
            android:textSize="12sp"
            android:textColor="@color/gray_600"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp" />

        <!-- Time Window Controls -->
        <LinearLayout
            android:id="@+id/layoutTimeWindow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From:"
                    android:textSize="14sp"
                    android:textColor="@color/gray_700"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvStartTime"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="09:00"
                    android:textSize="16sp"
                    android:textColor="@color/teal_500"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/button_outline_teal"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To:"
                    android:textSize="14sp"
                    android:textColor="@color/gray_700"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvEndTime"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="18:00"
                    android:textSize="16sp"
                    android:textColor="@color/teal_500"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/button_outline_teal"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apps will be blocked outside this time window"
                android:textSize="12sp"
                android:textColor="@color/gray_500"
                android:gravity="center"
                android:background="@color/gray_100"
                android:padding="8dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Remove Time Limit Button (for existing limits) -->
    <Button
        android:id="@+id/btnRemoveTimeLimit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Remove Time Limit"
        android:textColor="@color/red_600"
        android:background="@drawable/button_outline_red"
        android:textSize="14sp"
        android:visibility="gone" />

</LinearLayout>