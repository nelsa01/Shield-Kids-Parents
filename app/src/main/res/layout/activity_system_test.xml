<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            android:clickable="true"
            android:focusable="true"
            android:padding="4dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Shield Kids System Test"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center" />

        <View
            android:layout_width="24dp"
            android:layout_height="24dp" />

    </LinearLayout>

    <!-- Test Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnTestPermissions"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Permissions"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:background="@drawable/button_outline_teal"
            android:textColor="@color/teal_500"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/btnTestDeviceAdmin"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Device Admin"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:background="@drawable/button_outline_teal"
            android:textColor="@color/teal_500"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/btnTestAppInventory"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="App Scan"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:background="@drawable/button_outline_teal"
            android:textColor="@color/teal_500"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/btnTestServices"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Services"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:background="@drawable/button_outline_teal"
            android:textColor="@color/teal_500"
            android:layout_marginStart="4dp" />

    </LinearLayout>

    <!-- Test Results -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/card_background"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTestResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🔍 Loading system tests..."
            android:textSize="12sp"
            android:textColor="@color/black"
            android:fontFamily="monospace"
            android:lineSpacingExtra="2dp" />

    </ScrollView>

    <!-- Permission Management Button -->
    <Button
        android:id="@+id/btnManagePermissions"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:text="Manage Permissions"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/button_teal_rounded" />

</LinearLayout>