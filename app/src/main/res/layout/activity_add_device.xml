<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_100">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@color/white"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            app:tint="@color/gray_900" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add a new device"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/gray_900"
            android:gravity="center"
            android:layout_marginEnd="24dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Device Type Selection -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="40dp">

                <!-- First Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- Android Device -->
                    <LinearLayout
                        android:id="@+id/deviceAndroid1"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/card_background_selectable"
                        android:layout_marginEnd="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="16dp">

                        <!-- Selection indicator -->
                        <View
                            android:id="@+id/indicatorAndroid1"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/circle_teal_background"
                            android:layout_marginBottom="12dp"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/circle_teal_background"
                            android:gravity="center"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_device_android"
                                app:tint="@color/white" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Android"
                            android:textSize="14sp"
                            android:textColor="@color/gray_900"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- iOS Device -->
                    <LinearLayout
                        android:id="@+id/deviceiOS"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/card_background_selectable"
                        android:layout_marginStart="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="16dp">

                        <!-- Selection indicator -->
                        <View
                            android:id="@+id/indicatoriOS"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/circle_teal_background"
                            android:layout_marginBottom="12dp"
                            android:visibility="visible" />

                        <LinearLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/circle_teal_background"
                            android:gravity="center"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_device_ios"
                                app:tint="@color/white" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="iOS"
                            android:textSize="14sp"
                            android:textColor="@color/gray_900"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Second Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Windows Device -->
                    <LinearLayout
                        android:id="@+id/deviceWindows"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/card_background_selectable"
                        android:layout_marginEnd="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="16dp">

                        <!-- Selection indicator -->
                        <View
                            android:id="@+id/indicatorWindows"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/circle_teal_background"
                            android:layout_marginBottom="12dp"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/circle_teal_background"
                            android:gravity="center"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_device_windows"
                                app:tint="@color/white" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Windows"
                            android:textSize="14sp"
                            android:textColor="@color/gray_900"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Android Tablet -->
                    <LinearLayout
                        android:id="@+id/deviceAndroid2"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/card_background_selectable"
                        android:layout_marginStart="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="16dp">

                        <!-- Selection indicator -->
                        <View
                            android:id="@+id/indicatorAndroid2"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/circle_teal_background"
                            android:layout_marginBottom="12dp"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/circle_teal_background"
                            android:gravity="center"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_device_android"
                                app:tint="@color/white" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Android"
                            android:textSize="14sp"
                            android:textColor="@color/gray_900"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Installation Method Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select how to install the app\non the device"
                android:textSize="18sp"
                android:textColor="@color/gray_900"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="32dp" />

            <!-- Installation Options -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="32dp">

                <!-- Link Option -->
                <LinearLayout
                    android:id="@+id/installLink"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/card_background_selectable"
                    android:layout_marginEnd="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/circle_teal_background"
                        android:gravity="center"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_link"
                            app:tint="@color/white" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Link"
                        android:textSize="16sp"
                        android:textColor="@color/gray_900"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- QR Code Option -->
                <LinearLayout
                    android:id="@+id/installQR"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/card_background_selectable"
                    android:layout_marginStart="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/circle_teal_background"
                        android:gravity="center"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_qr_code"
                            app:tint="@color/white" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="QR Code"
                        android:textSize="16sp"
                        android:textColor="@color/gray_900"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <!-- Info Message -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/info_background"
                android:padding="16dp"
                android:layout_marginBottom="32dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_info"
                    android:layout_marginEnd="12dp"
                    app:tint="@color/gray_500" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="You can quickly see that this text is meaningless so if you are smart find a better and suitable words for this sections"
                    android:textSize="12sp"
                    android:textColor="@color/gray_500"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>

            <!-- Spacer -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>

    </ScrollView>

    <!-- Done Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:background="@color/white">

        <Button
            android:id="@+id/btnDone"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Done"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/teal_500"
            android:background="@drawable/button_outline_teal"
            android:backgroundTint="@null" />

    </LinearLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="8dp"
        android:elevation="8dp">

        <!-- Home -->
        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/home"
                android:contentDescription="Home"
                app:tint="@color/teal_500" />

        </LinearLayout>

        <!-- Location -->
        <LinearLayout
            android:id="@+id/navLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_location"
                android:contentDescription="Location"
                app:tint="@color/gray_500" />

        </LinearLayout>

        <!-- Lightning -->
        <LinearLayout
            android:id="@+id/navLightning"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_lightning"
                android:contentDescription="Lightning"
                app:tint="@color/gray_500" />

        </LinearLayout>

        <!-- Settings -->
        <LinearLayout
            android:id="@+id/btnSettings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_settings"
                android:contentDescription="Settings"
                app:tint="@color/gray_500" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
