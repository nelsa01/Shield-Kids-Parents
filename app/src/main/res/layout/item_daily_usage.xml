<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Date Column -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/tvDayName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mon"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/gray_600" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dec 15"
                android:textSize="14sp"
                android:textColor="@color/black" />

        </LinearLayout>

        <!-- Usage Info Column -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Total Time -->
            <TextView
                android:id="@+id/tvTotalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2h 45m"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/teal_500"
                android:layout_marginBottom="4dp" />

            <!-- Usage Bar -->
            <View
                android:id="@+id/vUsageBar"
                android:layout_width="60dp"
                android:layout_height="4dp"
                android:background="@drawable/usage_bar_medium"
                android:layout_marginBottom="8dp" />

            <!-- Stats Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvAppCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 apps"
                    android:textSize="12sp"
                    android:textColor="@color/gray_600"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/tvUnlocks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25 unlocks"
                    android:textSize="12sp"
                    android:textColor="@color/gray_600" />

            </LinearLayout>

            <!-- Top App -->
            <TextView
                android:id="@+id/tvTopApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chrome (45m)"
                android:textSize="12sp"
                android:textColor="@color/gray_700"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Arrow Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_forward"
            android:layout_gravity="center_vertical"
            android:alpha="0.5" />

    </LinearLayout>

</androidx.cardview.widget.CardView>