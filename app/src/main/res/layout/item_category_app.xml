<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp">

    <!-- Main App Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Policy Status Indicator -->
        <View
            android:id="@+id/viewPolicyIndicator"
            android:layout_width="4dp"
            android:layout_height="48dp"
            android:background="@color/green_500"
            android:layout_marginEnd="12dp" />

        <!-- App Icon -->
        <ImageView
            android:id="@+id/ivAppIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/circle_background"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_shield" />

        <!-- App Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- App Name -->
            <TextView
                android:id="@+id/tvAppName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="App Name"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Package Name -->
            <TextView
                android:id="@+id/tvPackageName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="com.example.app"
                android:textSize="11sp"
                android:textColor="@color/gray_500"
                android:layout_marginTop="1dp"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- App Info Row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tvAppVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="v1.0.0"
                    android:textSize="10sp"
                    android:textColor="@color/gray_600"
                    android:background="@drawable/chip_background"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp" />

                <TextView
                    android:id="@+id/tvIndividualPolicy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Individual policy"
                    android:textSize="10sp"
                    android:textColor="@color/orange_600"
                    android:background="@drawable/chip_background"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    android:layout_marginStart="4dp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <!-- Policy Status -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvPolicyStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Allowed"
                android:textSize="13sp"
                android:textColor="@color/green_600"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:id="@+id/ivExpandIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_expand_more"
                android:tint="@color/gray_600" />

        </LinearLayout>

    </LinearLayout>

    <!-- Expandable Policy Actions -->
    <LinearLayout
        android:id="@+id/layoutPolicyActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:paddingStart="64dp"
        android:visibility="gone">

        <!-- Policy Buttons Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnAllow"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="Allow"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:background="@drawable/button_secondary"
                android:textColor="@color/gray_600"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnBlock"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="Block"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:background="@drawable/button_secondary"
                android:textColor="@color/gray_600"
                android:layout_marginStart="4dp" />

        </LinearLayout>

        <!-- Policy Buttons Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnTimeLimit"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="Time Limit"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:background="@drawable/button_secondary"
                android:textColor="@color/gray_600"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnSchedule"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="Schedule"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:background="@drawable/button_secondary"
                android:textColor="@color/gray_600"
                android:layout_marginStart="4dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>