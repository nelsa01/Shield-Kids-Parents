<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="@color/white">

    <!-- Device Icon -->
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_device_usage"
        android:background="@drawable/circle_background"
        android:padding="16dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="Device Icon" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect Your Device"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp" />

    <!-- Instructions -->
    <TextView
        android:id="@+id/tvInstructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the 6-digit linking code from your parent to connect your device"
        android:textSize="16sp"
        android:textColor="@color/gray_600"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <!-- Linking Code Input -->
    <EditText
        android:id="@+id/etLinkingCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter 6-digit code"
        android:inputType="number"
        android:maxLength="6"
        android:background="@drawable/edit_text_background"
        android:padding="16dp"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <!-- Connect Button -->
    <Button
        android:id="@+id/btnConnect"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Connect Device"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/button_teal_rounded"
        android:textColor="@color/white"
        android:layout_marginBottom="24dp" />

    <!-- Status Text -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:textColor="@color/teal_500"
        android:gravity="center" />

</LinearLayout>
