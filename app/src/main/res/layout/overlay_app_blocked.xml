<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp">

        <!-- Shield Kids Logo/Icon -->
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_shield"
            android:tint="@color/teal_500" />

        <!-- App Icon -->
        <ImageView
            android:id="@+id/ivAppIcon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/circle_background"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_placeholder" />

        <!-- Blocked App Name -->
        <TextView
            android:id="@+id/tvBlockedAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="App Name"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Block Reason -->
        <TextView
            android:id="@+id/tvBlockReason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="This app is blocked by your parent"
            android:textColor="@color/gray_600"
            android:textSize="16sp" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnRequestAccess"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_teal_rounded"
                android:text="Request Access"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnGoHome"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_outline_teal"
                android:text="Go Home"
                android:textColor="@color/teal_500"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Close Button -->
        <Button
            android:id="@+id/btnClose"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Close"
            android:textColor="@color/gray_500"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Instructions at bottom -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="This message was generated by Shield Kids parental controls"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:alpha="0.8" />

</LinearLayout>