<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_100">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/teal_500"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="Permission Setup"
        app:titleTextColor="@color/white" />

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvPermissionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Required Permissions"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvPermissionDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shield Kids needs these permissions to protect your children effectively."
            android:textSize="14sp"
            android:textColor="@color/gray_600"
            android:lineSpacingMultiplier="1.2" />

    </LinearLayout>

    <!-- Permission List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPermissions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="16dp"
        android:elevation="8dp">

        <Button
            android:id="@+id/btnRequestAllPermissions"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_teal_rounded"
            android:text="Request Missing Permissions"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnContinueAnyway"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/button_outline_rounded"
            android:text="Continue Anyway"
            android:textColor="@color/gray_600"
            android:textSize="14sp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>