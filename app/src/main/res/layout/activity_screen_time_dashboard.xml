<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/teal_500"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:title="Screen Time"
        android:navigationIcon="?attr/homeAsUpIndicator" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:visibility="gone" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Content Layout -->
                <LinearLayout
                    android:id="@+id/contentLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Time Period Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <Button
                            android:id="@+id/btnTodayView"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Today"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/btnWeekView"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Week"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/btnMonthView"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Month"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <!-- Period Title -->
                    <TextView
                        android:id="@+id/tvPeriodTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Weekly Overview"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="16dp" />

                    <!-- Summary Cards -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <!-- Total Week Time Card -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp"
                            xmlns:app="http://schemas.android.com/apk/res-auto">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="12dp"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/tvTotalWeekTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0h 0m"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/teal_500" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Total Time"
                                    android:textSize="12sp"
                                    android:textColor="@color/gray_600" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <!-- Average Daily Time Card -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="12dp"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/tvAverageDailyTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0h 0m"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/orange_600" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Daily Average"
                                    android:textSize="12sp"
                                    android:textColor="@color/gray_600" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <!-- Additional Stats -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <!-- Apps Used Card -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="8dp"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/tvTotalApps"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/blue_600" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Apps Used"
                                    android:textSize="10sp"
                                    android:textColor="@color/gray_600" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <!-- Screen Unlocks Card -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="8dp"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/tvTotalUnlocks"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/purple_600" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Unlocks"
                                    android:textSize="10sp"
                                    android:textColor="@color/gray_600" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <!-- Week Change -->
                    <TextView
                        android:id="@+id/tvWeekChange"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textSize="14sp"
                        android:textColor="@color/gray_600"
                        android:layout_marginBottom="16dp"
                        android:gravity="center" />

                    <!-- Usage Chart (Placeholder) -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Usage Chart"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:id="@+id/tvUsageChart"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Loading chart data..."
                                android:textSize="12sp"
                                android:fontFamily="monospace"
                                android:textColor="@color/gray_700" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Daily Usage List -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Daily Breakdown"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewDailyUsage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />

                </LinearLayout>

                <!-- Empty State Layout -->
                <LinearLayout
                    android:id="@+id/emptyStateLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="32dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_screen_time"
                        android:alpha="0.5"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/tvEmptyMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No screen time data available"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_600"
                        android:layout_marginBottom="8dp"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/tvEmptySubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data will appear here once usage is tracked"
                        android:textSize="14sp"
                        android:textColor="@color/gray_500"
                        android:gravity="center"
                        android:layout_marginBottom="16dp" />

                    <Button
                        android:id="@+id/btnRetry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Try Again"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>