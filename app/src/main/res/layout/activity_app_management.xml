<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/teal_500"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="App management"
            app:titleTextColor="@color/white" />

        <!-- App Monitoring Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="App monitoring"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="normal" />

                <Switch
                    android:id="@+id/switchAppMonitoring"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:theme="@style/SwitchTheme" />

            </LinearLayout>

            <!-- Device Admin Status -->
            <TextView
                android:id="@+id/tvDeviceAdminStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Requires device admin permissions"
                android:textSize="12sp"
                android:textColor="@color/orange_600"
                android:layout_marginTop="4dp"
                android:visibility="gone"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:padding="4dp" />

        </LinearLayout>

        <!-- Age Restrictions Section -->
        <LinearLayout
            android:id="@+id/layoutAgeRestrictions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Age restrictions"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Block the apps that have age restrictions on PlayStore or App Store"
                android:textSize="13sp"
                android:textColor="@color/gray_600"
                android:lineSpacingMultiplier="1.2" />

        </LinearLayout>

        <!-- Screen Time Limits Section -->
        <LinearLayout
            android:id="@+id/layoutScreenTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Screen Time Limits"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvScreenTimeStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2h weekday, 3h weekend"
                        android:textSize="13sp"
                        android:textColor="@color/gray_600"
                        android:layout_marginEnd="8dp" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_chevron_right"
                        android:tint="@color/gray_500" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set daily and weekly device usage limits, bedtime restrictions"
                android:textSize="13sp"
                android:textColor="@color/gray_600"
                android:lineSpacingMultiplier="1.2"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Exclusions Section -->
        <LinearLayout
            android:id="@+id/layoutAppExclusions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Exclusions"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvAppExclusionsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9"
                        android:textSize="16sp"
                        android:textColor="@color/gray_600"
                        android:layout_marginEnd="8dp" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_arrow_forward"
                        android:tint="@color/gray_600" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apps"
                android:textSize="13sp"
                android:textColor="@color/gray_600"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Category Policies Section -->
        <LinearLayout
            android:id="@+id/layoutCategoryPolicies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Category policies"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvCategoryPoliciesStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 blocked"
                        android:textSize="13sp"
                        android:textColor="@color/gray_600"
                        android:layout_marginEnd="8dp" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_chevron_right"
                        android:tint="@color/gray_500" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Block or allow entire app categories like Social, Games, Browsers"
                android:textSize="13sp"
                android:textColor="@color/gray_600"
                android:lineSpacingMultiplier="1.2"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Manage Apps Section -->
        <LinearLayout
            android:id="@+id/layoutViewAllApps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Manage apps"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tvAllAppsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="14sp"
                    android:textColor="@color/gray_600"
                    android:background="@drawable/badge_background_gray"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:minWidth="24dp"
                    android:gravity="center"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow_forward"
                    android:tint="@color/gray_600" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="See all apps installed on child's device"
                android:textSize="13sp"
                android:textColor="@color/gray_600"
                android:layout_marginTop="4dp" />

        </LinearLayout>


    </LinearLayout>

</ScrollView>