<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.ShieldKids" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/teal_500</item>
        <item name="colorPrimaryDark">@color/teal_700</item>
        <item name="colorAccent">@color/teal_500</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.ShieldKids.BottomSheetDialog</item>
    </style>

    <style name="ThemeOverlay.ShieldKids.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="colorPrimary">@color/teal_500</item>
        <item name="colorSecondary">@color/teal_500</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/gray_900</item>
    </style>

    <style name="Theme.ShieldKids.Dialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/teal_500</item>
        <item name="colorSecondary">@color/teal_500</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/gray_900</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="SwitchTheme" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="colorControlActivated">@color/teal_500</item>
        <item name="colorSwitchThumbNormal">@color/gray_400</item>
        <item name="android:colorForeground">@color/teal_500</item>
    </style>

    <style name="TabButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/tab_button_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">18dp</item>
        <item name="strokeColor">@color/tab_button_stroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="backgroundTint">@color/tab_button_background</item>
    </style>
</resources>