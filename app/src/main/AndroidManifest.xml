<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS" 
        android:protectionLevel="signature|privileged" 
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES"
        tools:ignore="QueryAllPackagesPermission" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    
    <!-- For Android 13+ notification permission -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".features.core.ShieldKidsApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShieldKids">

        <service
            android:name=".features.core.MessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id" />

        <!-- Shield Monitoring Service -->
        <service
            android:name=".common.base.ShieldMonitoringService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="specialUse">
            <property android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="parental_controls" />
            <property android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE_DESCRIPTION"
                android:value="Monitors device usage and enforces parental controls for child safety" />
        </service>

        <!-- System Event Receiver -->
        <receiver
            android:name=".common.base.SystemEventReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.PACKAGE_ADDED" />
                <action android:name="android.intent.action.PACKAGE_REMOVED" />
                <action android:name="android.intent.action.PACKAGE_REPLACED" />
                <data android:scheme="package" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SCREEN_ON" />
                <action android:name="android.intent.action.SCREEN_OFF" />
                <action android:name="android.intent.action.USER_PRESENT" />
            </intent-filter>
        </receiver>

        <!-- Boot Receiver -->
        <receiver
            android:name=".common.base.BootReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
            </intent-filter>
        </receiver>

        <!-- Device Admin Receiver -->
        <receiver
            android:name=".common.base.ShieldDeviceAdminReceiver"
            android:permission="android.permission.BIND_DEVICE_ADMIN"
            android:exported="true">
            <meta-data
                android:name="android.app.device_admin"
                android:resource="@xml/device_admin_policies" />
            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
                <action android:name="android.app.action.DEVICE_ADMIN_DISABLED" />
                <action android:name="android.app.action.ACTION_PASSWORD_CHANGED" />
                <action android:name="android.app.action.ACTION_PASSWORD_FAILED" />
                <action android:name="android.app.action.ACTION_PASSWORD_SUCCEEDED" />
            </intent-filter>
        </receiver>

        <!-- Shield Accessibility Service for App Blocking -->
        <service
            android:name=".features.app_blocking.ShieldAccessibilityService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:exported="true">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>

        <activity android:name=".features.onboarding.ui.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.ShieldKids">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".features.settings.PasscodeActivity" />

        <activity android:name=".features.authentication.RoleSelectionActivity" />
        <activity android:name=".features.authentication.ParentRegisterActivity" />
        <activity android:name=".features.dashboard.ParentDashboardActivity" />
        <activity android:name=".features.authentication.ParentLoginActivity" />
        <activity android:name=".features.onboarding.ui.OnboardingActivity" />
        <activity android:name=".features.authentication.PasswordResetActivity" />
        <activity android:name=".features.authentication.VerifyEmailActivity" />
        <activity android:name=".features.settings.SettingsActivity" />
        <activity android:name=".features.child_management.ui.AddChildActivity" />
        <activity android:name=".features.child_management.ui.ChildConnectActivity" />
        <activity android:name=".features.child_management.ui.ChildDetailActivity" />
        <activity android:name=".features.device_setup.ui.AddDeviceActivity" />
        <activity android:name=".features.device_setup.ui.WaitingForSetupActivity" />
        <activity android:name=".features.device_setup.ui.DeviceSetupActivity" />
        <activity android:name=".features.settings.DeviceSettingsActivity" />
        <activity android:name=".features.device_setup.ui.DeviceAdminSetupActivity" />
        <activity android:name=".debug.SystemTestActivity" />
        <activity android:name=".features.device_setup.ui.PermissionRequestActivity" />
        <activity android:name=".features.app_management.ui.AppListActivity" />
        <activity android:name=".features.child_management.ui.ChildModeActivity" />
        <activity android:name=".features.child_management.ui.ChildDeviceLinkingActivity" />
        
        <!-- App Management Activities -->
        <activity 
            android:name=".features.app_management.ui.AppManagementActivity"
            android:exported="false"
            android:theme="@style/Theme.ShieldKids" />
            
        <activity 
            android:name=".features.policy.ui.CategoryPoliciesActivity"
            android:exported="false"
            android:theme="@style/Theme.ShieldKids" />
            
        <activity 
            android:name=".features.app_management.AllAppsActivity"
            android:exported="false"
            android:theme="@style/Theme.ShieldKids" />
            
        <activity 
            android:name=".features.app_management.ui.AppExclusionsActivity"
            android:exported="false"
            android:theme="@style/Theme.ShieldKids" />
            
        <activity 
            android:name=".features.policy.ui.CategoryPolicyActivity"
            android:exported="false"
            android:theme="@style/Theme.ShieldKids" />
            
        <activity 
            android:name=".features.screen_time.ui.DeviceScreenTimeActivity"
            android:exported="false"
            android:theme="@style/Theme.ShieldKids" />
        
        <!-- Policy Test Activity - Only for testing/debug builds -->
        <activity 
            android:name=".features.policy.ui.PolicyTestActivity"
            android:exported="false"
            android:theme="@style/Theme.ShieldKids" />
            
        <!-- Policy Debug Activity - For debugging policy enforcement -->
        <activity 
            android:name=".features.policy.ui.PolicyDebugActivity"
            android:exported="false"
            android:theme="@style/Theme.ShieldKids" />
            
        <!-- Screen Time Dashboard Activity -->
        <activity 
            android:name=".features.screen_time.ui.ScreenTimeDashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.ShieldKids" />
            
        <!-- Screen Time Debug Activity - For debugging screen time collection -->
        <activity 
            android:name=".features.screen_time.ui.ScreenTimeDebugActivity"
            android:exported="false"
            android:theme="@style/Theme.ShieldKids" />
            
        <!-- Screen Time Reports Activity - For parent-side screen time reports -->
        <activity 
            android:name=".features.screen_time.ui.ScreenTimeReportsActivity"
            android:exported="false"
            android:theme="@style/Theme.ShieldKids" />
            
        <!-- Unified Sync Debug Activity - For debugging unified 5-minute sync -->
        <activity 
            android:name=".common.sync.UnifiedSyncDebugActivity"
            android:exported="false"
            android:theme="@style/Theme.ShieldKids" />
            
        <!-- Firebase Debug Activity - For debugging Firebase initialization and device registration -->
        <activity 
            android:name=".debug.FirebaseDebugActivity"
            android:exported="false"
            android:theme="@style/Theme.ShieldKids" />
        
        <activity 
            android:name=".features.policy.ui.PolicyStatusActivity"
            android:exported="false"
            android:theme="@style/Theme.ShieldKids" />

        <!-- Installation Blocking Service -->
        <service
            android:name=".features.policy.InstallationBlockingService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="specialUse">
            <property android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="parental_controls" />
            <property android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE_DESCRIPTION"
                android:resource="@string/installation_blocking_service_description" />
        </service>

    </application>
</manifest>